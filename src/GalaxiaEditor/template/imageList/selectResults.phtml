use Galaxia\Text;
use GalaxiaEditor\E;
use GalaxiaEditor\frag\FragPagination;


FragPagination::renderHiddenData(E::$pagination) ?>

<?php
$yearMonthPrev = '';
foreach (E::$imgRows as $imgSlug => $html) {
    $mtime     = E::$imgItems[$imgSlug]['mtime'];
    $yearMonth = date('Ym', $mtime);
    if ($yearMonth != $yearMonthPrev) {
        echo '<h2>' . Text::formatDate($mtime, 'MMMM y') . '</h2>' . PHP_EOL;
        $yearMonthPrev = $yearMonth;
    }
    echo $html;
}
